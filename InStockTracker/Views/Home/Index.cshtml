@{
	Layout = "_Layout";
}

<form asp-controller="Products" asp-action="Index">
	<div class="input-group">
		<input type="text" class="form-control" placeholder="Search" name="name" id="name">
		<div class="input-group-append">
			<button class="btn btn-secondary" type="submit">Search</button>
		</div>
	</div>
</form>

<div class="card-columns">
	<div class="card">
		<div class="card-header"><h4 class="card-title">Appliances</h4></div>
		<img class="card-img-bottom" src="~/img/appliance.png" alt="appliance image" />
		<a href="/products/appliance" class="stretched-link"></a>
	</div>

	<div class="card">
		<div class="card-header"><h4 class="card-title">Clothes</h4></div>
		<img class="card-img-bottom" src="~/img/clothes.png" alt="clothes image" />
		<a href="/products/clothes" class="stretched-link"></a>
	</div>
</div>