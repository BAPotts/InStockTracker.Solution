@{
  Layout = "_Layout";
}

@model IEnumerable<InStockTracker.Models.Product>

<div class="card-columns">
@foreach(var product in Model)
{
  <div class="card">
    <div class="card-header"><h4 class="card-title">@product.Name</h4></div>
    <div class="card-body">
      @if(product.Images.Count()!=0)
      {
        <img class="categories-image" src="@ViewBag.ImageDictionary[product.Name]" />
      }
      <p>@product.Description</p>
      <p>@product.Manufacturer</p>
      <p>@product.Price.ToString("C")</p>
    </div>

    <a href="/products/details/@product.ProductId" class="stretched-link"></a>
  </div>
}
</div>