@{
  Layout = "_Layout";
}

<form asp-controller="Products" asp-action="Results" method="post">
  <div class="form-group">
    <label for="name">Search By Name</label>
    <input type="search" id="name" name="name" class="form-control" placeholder="Name" />
    <label for="manufacturer">Search by Manufacturer</label>
    <input type="search" id="manufacturer" name="manufacturer" class="form-control" placeholder="Manufacturer" />
    <label for="description">Search by Description</label>
    <input type="search" id="description" name="description" class="form-control" placeholder="Description" />
    <label for="minPrice">Search by Minimum Price</label>
    <input type="search" id="minPrice" name="minPrice" class="form-control" placeholder="$" pattern="[$][0-9]+.[0-9]{2}" />
    <label for="maxPrice">Search by Maximum Price</label>
    <input type="search" id="maxPrice" name="maxPrice" class="form-control" placeholder="$" pattern="[$][0-9]+.[0-9]{2}" />
  </div>
  <button type="submit" class="btn btn-info">Search!</button>
</form>